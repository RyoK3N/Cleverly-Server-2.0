# Cleverly Data Hub - Environment Configuration
# Copy this file to .env and update with your credentials

# =============================================================================
# Monday.com Configuration
# =============================================================================
MONDAY_API_KEY=your_monday_api_key_here
MONDAY_BOARD_ID=6942829967

# =============================================================================
# Calendly Configuration
# =============================================================================
CALENDLY_API_KEY=your_calendly_api_key_here
CALENDLY_ACCESS_TOKEN=your_calendly_access_token_here

# =============================================================================
# Authentication (CHANGE THESE IN PRODUCTION!)
# =============================================================================
CLEVERLY_ADMIN_USER=admin
CLEVERLY_ADMIN_PASSWORD=your_secure_admin_password
CLEVERLY_USER=user
CLEVERLY_USER_PASSWORD=your_secure_user_password

# Legacy API keys (for backwards compatibility)
CLEVERLY_API_KEY=your-custom-api-key
CLEVERLY_API_KEY_READONLY=your-readonly-key

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=5000
DEBUG=False

# =============================================================================
# Security Settings (Production)
# =============================================================================
# SECRET_KEY=your-secret-key-for-sessions
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
